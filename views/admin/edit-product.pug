html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title #{pageTitle}
    script(src="https://cdn.tailwindcss.com")
  body
    include ../includes/navigation.pug
    main.bg-gray-400.rounded-md.bg-clip-padding.backdrop-filter.backdrop-blur-sm.bg-opacity-10.border.border-gray-100.py-20.h-screen
      div.flex.flex-col.justify-center.items-center
        h1.font-extrabold.text-blue-500.capitalize Edit Product
        form.flex.flex-col.w-full.justify-around.gap-10.mt-10.px-20(action="/admin/add-product", method="POST")
          input(type="text", name="product", required, class="border-b-2 border-solid border-blue-500 p-2 bg-transparent outline-none" value=title)
          input(type="text", name="imageUrl", required, class="border-b-2 border-solid border-blue-500 p-2 bg-transparent outline-none", value=imageUrl)
          input(type="number", name="price", required, class="border-b-2 border-solid border-blue-500 p-2 bg-transparent outline-none", value=price, step="0.01")
          input(type="text", name="description", required, class="border-b-2 border-solid border-blue-500 p-2 bg-transparent outline-none", value=description)
          button(type="submit", class="border-solid border-2 rounded-full border-blue-500 p-5 bg-blue-600 text-white mt-10") Submit
    include ../includes/end.pug
    
